# SumireBOT Configuration

# Discord Bot Token
token: "YOUR_BOT_TOKEN_HERE"

# Database Path
databasePath: "./sumireBOT.db"

# Bot Status
status: online  # online, idle, dnd, invisible

# Bot Activity
activity:
  type: playing  # playing, streaming, listening, watching, competing
  name: "v0.1.1-beta"

# Feature Toggles
features:
  ping: true
  ticket: true
  logger: true
  autorole: true
  panel: true

# Pterodactyl Panel (panel機能を使う場合は設定してください)
pterodactyl:
  url: "https://panel.example.com"  # PterodactylパネルのURL
  apiKey: "ptlc_YOUR_CLIENT_API_KEY"  # Client API Key (https://panel.example.com/account/api から取得)

